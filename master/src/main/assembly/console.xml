<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">


    <id>console</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>


    <files>
        <file>
            <source>${project.basedir}/src/main/assembly/module.xml</source>
            <outputDirectory>modules/system/layers/${layer.name}/${module.path}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/${project.build.finalName}-resources.jar</source>
            <outputDirectory>modules/system/layers/${layer.name}/${module.path}</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>